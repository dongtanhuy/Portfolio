<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group20.flashcards.flashcards" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseSubjectActivity"
            android:label="@string/title_activity_choose_subject" >
        </activity>
        <activity
            android:name=".LearnActivity"
            android:label="@string/title_activity_learn" >
        </activity>
        <activity
            android:name=".SubjectManagerActivity"
            android:label="@string/title_activity_subject_manager" >
        </activity>
        <activity
            android:name=".EditSubjectActivity"
            android:label="@string/title_activity_edit_subject" >
        </activity>
        <activity
            android:name=".EditCardActivity"
            android:label="@string/title_activity_edit_card" >
        </activity>
        <activity
            android:name=".ImportActivity"
            android:label="@string/title_activity_import" >
        </activity>
    </application>

</manifest>
