<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group20.flashcards.flashcards.InsertManualWordActivity">

    <TextView
        android:text="INSERT YOUR WORDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/insert_manual_label"
        android:layout_centerHorizontal="true"
        android:paddingBottom="200px"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_manual_label"
        android:id="@+id/insert_manual_word"
        android:hint="Enter your word"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_manual_word"
        android:id="@+id/insert_manual_meaning"
        android:hint="Enter it's meaning"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_manual_meaning"
        android:id="@+id/insert_manual_insertbtn"
        android:text="INSERT"
        android:textSize="30dp"
        android:background="#FAA228"
        android:textColor="#fff"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_manual_insertbtn"
        android:id="@+id/insert_manual_done"
        android:text="DONE"
        android:background="#28FADE"
        android:textSize="30dp"
        />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/insert_manual_done"
        android:id="@+id/insert_manual_listword"
        >
    </ListView>
</RelativeLayout>
