<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relatelive_layout1"
    tools:context="group20.flashcards.flashcards.LearnActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nature"
        android:textSize="35sp"
        android:id="@+id/flashcard_subject"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:id="@+id/tv_content"
        android:layout_below="@id/flashcard_subject"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer"
        android:visibility="invisible"
        android:id="@+id/tv_answer"
        android:textStyle="bold"
        android:layout_below="@id/flashcard_subject"
        android:textSize="60sp"
        android:layout_marginTop="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.rey.material.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:id="@+id/btn_previous"
            android:text="Previous"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4fc3f7"
            app:rd_enable="true"
            app:rd_rippleColor="#e1f5fe"
            app:rd_delayClick="untilRelease"
            app:rd_maxRippleRadius="match_view"
            app:rd_padding="2dp"
            app:rd_cornerRadius="4dp"
            app:rd_rippleAnimDuration="800"
            android:background="@drawable/export_subject_btn"/>

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Answer"-->
        <!--android:textColor="#2815D1"-->
        <!--android:layout_alignTop="@+id/btn_next"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:id="@+id/btn_answer" />-->

        <com.rey.material.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:id="@+id/btn_next"
            android:text="Next"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4fc3f7"
            app:rd_enable="true"
            app:rd_rippleColor="#e1f5fe"
            app:rd_delayClick="untilRelease"
            app:rd_maxRippleRadius="match_view"
            app:rd_padding="2dp"
            app:rd_cornerRadius="4dp"
            app:rd_rippleAnimDuration="800"
            android:background="@drawable/export_subject_btn"/>

    </LinearLayout>


</RelativeLayout>
